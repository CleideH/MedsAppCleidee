<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufop.cleide.MainActivity">

    <ImageView
        android:id="@+id/imageDoc"
        android:layout_width="104dp"
        android:layout_height="99dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="8dp"
        android:onClick="doctors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProfile"
        app:layout_constraintVertical_bias="0.403"
        app:srcCompat="@drawable/doctor" />

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="104dp"
        android:layout_height="99dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="144dp"
        android:onClick="profile"
        app:layout_constraintEnd_toStartOf="@+id/imageMedicines"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/imageMedicines"
        android:layout_width="104dp"
        android:layout_height="99dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="144dp"
        android:onClick="medicines"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medicine" />

    <ImageView
        android:id="@+id/imageCall"
        android:layout_width="104dp"
        android:layout_height="99dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toEndOf="@+id/imageDoc"
        app:layout_constraintTop_toBottomOf="@+id/imageMedicines"
        app:layout_constraintVertical_bias="0.416"
        app:srcCompat="@drawable/call" />

</android.support.constraint.ConstraintLayout>
